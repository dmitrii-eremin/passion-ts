{
  "name": "@dmitrii-eremin/passion-engine",
  "version": "1.0.29",
  "description": "A modern, lightweight browser game engine for TypeScript, inspired by Pyxel.",
  "author": "Dmitrii Eremin <erem.dmitrii@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dmitrii-eremin/passion-ts.git"
  },
  "homepage": "https://github.com/dmitrii-eremin/passion-ts/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/dmitrii-eremin/passion-ts/issues"
  },
  "type": "module",
  "main": "engine-build/passion.js",
  "types": "engine-build/passion.d.ts",
  "files": [
    "engine-build/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:engine": "tsc -p tsconfig.engine.json",
    "preview": "vite preview",
    "test": "true",
    "publish-npmjs": "npm publish --access public --registry=https://registry.npmjs.org/",
    "publish-github": "npm publish --access public --registry=https://npm.pkg.github.com/",
    "publish": "npm-run-all publish-npmjs publish-github"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "typescript": "~5.8.3",
    "vite": "^6.3.5"
  }
}
